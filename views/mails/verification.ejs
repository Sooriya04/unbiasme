<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Email Verification</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/verification.css" />
  </head>
  <body>
    <div class="center-box">
      <div class="verification-box">
        <div id="success-message" class="d-none">
          <div class="icon mb-3">&#10004;</div>
          <h3>Email Verified!</h3>
          <p>
            Your account has been successfully verified. You may now log in.
          </p>
          <a href="/login" class="btn btn-success mt-3">Go to Login</a>
        </div>

        <div id="error-message" class="d-none">
          <div class="icon fail-icon mb-3">&#10006;</div>
          <h3>Verification Failed</h3>
          <p>Invalid or expired verification link.</p>
          <a href="/signup" class="btn btn-danger mt-3">Try Again</a>
        </div>
      </div>
    </div>

    <script>
      const params = new URLSearchParams(window.location.search);
      if (params.get("status") === "success") {
        document.getElementById("success-message").classList.remove("d-none");
      } else {
        document.getElementById("error-message").classList.remove("d-none");
      }
    </script>
  </body>
</html>
