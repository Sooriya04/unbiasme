<!DOCTYPE html>
<html>
  <head>
    <title>Quiz</title>
    <link rel="stylesheet" href="/css/quiz.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .hidden {
        display: none !important;
      }
      .show {
        display: block !important;
      }
    </style>
  </head>
  <body>
    <div id="quiz-container" class="quiz-container">
      <div class="quiz-box text-center">
        <h2 id="question-title" class="mb-4">Your Question Appears Here</h2>
        <form
          id="quiz-form"
          class="d-flex flex-column align-items-center justify-content-center"
        >
          <label class="radio-button">
            <input
              type="radio"
              name="option"
              value="A"
              onchange="toggleCustom(false)"
            />
            <span id="labelA">Option A</span>
            <span class="radio-button__custom"></span>
          </label>

          <label class="radio-button">
            <input
              type="radio"
              name="option"
              value="B"
              onchange="toggleCustom(false)"
            />
            <span id="labelB">Option B</span>
            <span class="radio-button__custom"></span>
          </label>

          <label class="radio-button">
            <input
              type="radio"
              name="option"
              value="C"
              onchange="toggleCustom(false)"
            />
            <span id="labelC">Option C</span>
            <span class="radio-button__custom"></span>
          </label>

          <label class="radio-button">
            <input
              type="radio"
              name="option"
              value="D"
              onchange="toggleCustom(false)"
            />
            <span id="labelD">Option D</span>
            <span class="radio-button__custom"></span>
          </label>

          <label class="radio-button">
            <input
              type="radio"
              name="option"
              value="E"
              onchange="toggleCustom(false)"
            />
            <span id="labelE">Option E</span>
            <span class="radio-button__custom"></span>
          </label>
          <div class="mt-4 w-100 d-flex justify-content-center">
            <button type="button" onclick="submitAnswer()">Next</button>
          </div>
        </form>
      </div>
    </div>

    <div id="feedback-screen"></div>

    <div id="result-screen" style="display: none; padding: 2rem">
      <h2 class="text-center mb-4">Quiz Complete, <%= username %>!</h2>
      <div class="container">
        <div class="col-12 text-center mt-4">
          <div id="trait-progress-bars" class="mt-4"></div>

          <a href="/dashboard" class="btn btn-primary">Check Results</a>
        </div>
      </div>
    </div>

    <div id="feedback-screen"></div>

    <script src="/js/quizFecting.js"></script>
  </body>
</html>
